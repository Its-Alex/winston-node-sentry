{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": "srcs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "lib": [
      "es6",
      "dom"
    ]
  },
  "include": [
    "srcs/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}